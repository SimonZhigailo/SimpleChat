{
	"compilerOptions": {
		"target": "es2015",
		"module": "es2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipDefaultLibCheck": true,
		"removeComments": true,
		"lib": ["es2016", "dom"],
		"typeRoots": [
			"./node_modules/@types/"
		]
	},
	"exclude": ["bin", "node_modules"],
	"atom": { "rewriteTsconfig": false },
	"awesomeTypescriptLoaderOptions": {
		"useWebpackText": true
	}
}